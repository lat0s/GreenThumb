<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/currentPlantText"
        style="@style/mulishBold"
        android:layout_width="200dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:text="Current Plant"
        android:textSize="30sp" />

    <Button
        android:id="@+id/homeToPlantProfilesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginBottom="71dp"
        android:fontFamily="@font/mulishbold"
        android:text="Plant Profiles" />

    <Button
        android:id="@+id/homeToSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="72dp"
        android:fontFamily="@font/mulishbold"
        android:text="Settings" />

    <Button
        android:id="@+id/homeToNotificationsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="101dp"
        android:layout_marginTop="182dp"
        android:fontFamily="@font/mulishbold"
        android:text="Care Notifications" />

</RelativeLayout>
